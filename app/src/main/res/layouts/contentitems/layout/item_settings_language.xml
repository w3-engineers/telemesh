<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="isShowSeparator"
            type="boolean" />

        <variable
            name="itemName"
            type="String" />

        <variable
            name="language"
            type="String" />

        <variable
            name="rawImage"
            type="int" />

    </data>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/item_language_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/image_view_profile"
            android:layout_width="@dimen/width_50"
            android:layout_height="@dimen/height_50"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:src="@{rawImage}" />

        <TextView
            android:id="@+id/title_view_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:fontFamily="@font/poppins_regular"
            android:text="@{itemName}"
            android:textSize="@dimen/text_size_18"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/image_view_profile"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_view_language"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_10"
            android:text="@{language}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <View
            android:id="@+id/separator_view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/margin_10"
            android:background="@color/grey_300"
            android:visibility="@{isShowSeparator ? View.VISIBLE : View.GONE}"
            app:layout_constraintTop_toBottomOf="@id/image_view_profile" />


    </android.support.constraint.ConstraintLayout>


</layout>
